<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".refrigeratoritem.update.UpdateFragment">

    <EditText
        android:id="@+id/update_itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:hint="재료 이름"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/update_itemProperty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="수량"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/update_itemName"
        app:layout_constraintStart_toStartOf="@+id/update_itemName"
        app:layout_constraintTop_toBottomOf="@+id/update_itemName" />

    <EditText
        android:id="@+id/update_validity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="유통 기한"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/update_itemProperty"
        app:layout_constraintStart_toStartOf="@+id/update_itemProperty"
        app:layout_constraintTop_toBottomOf="@+id/update_itemProperty" />

    <Button
        android:id="@+id/update_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="업데이트"
        app:layout_constraintEnd_toEndOf="@+id/update_validity"
        app:layout_constraintStart_toStartOf="@+id/update_validity"
        app:layout_constraintTop_toBottomOf="@+id/update_validity" />
</androidx.constraintlayout.widget.ConstraintLayout>